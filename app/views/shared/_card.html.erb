<%= link_to ticket_path(ticket), class: "Card" do %>
  <div class="Card__inner">
    <div class="Card__body">
      <h3 class="Card__title"><%= ticket.title %></h3>
      <div class="Card__price"> <%= t("time_max") " #{ticket.max_time}" %> </div>
      <div class="Card__price"> <%= t("time_actual") "#{ticket.actual_time}" %> </div>
    </div>
  </div>
<% end %>

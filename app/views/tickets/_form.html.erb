  <%= simple_form_for([ticket]) do |f| %>

    <%= f.input :title, placeholder: "Add a title for your issue" %>
    <%= f.input :description, placeholder: "Please provide a full description so we can solve the problem faster" %>
    <%= f.label :type_of_issue, "Type of issue" %>
    <%= f.input :type_of_issue, label: false, collection: ['Knowledge issue', ' Setup issue',  'Emergency issue/unexpected error', 'Capacity support'], include_blank: "- Select your issue -" %>
    <%= f.input :max_time, placeholder: "Maximum time we should work on the ticket", collection: ['15', '30', '45', '60', '90', '120', '150', '180', '240'], include_blank: "- Select the maximum amount of time we should work on the issue -"  %>
    <%= f.submit 'Submit ticket' %>
  <% end %>
